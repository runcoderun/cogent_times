%dl
  %dt
    %label{:for => "project_name"}
      Name:
  %dd
    = form.text_field :name, :size => '30', :maxlength => '100'
  %dt
    %label{:for => "project_category"}
      Category:
  %dd
    = collection_select(:project, :project_category_id, ProjectCategory.all, :id, :name, {:prompt => true})
  %dt
    %label{:for => "project_starting_hours"}
      Starting Hours:
  %dd
    = form.text_field :starting_hours, :size => '30', :maxlength => '100'
  %dt
    %label{:for => "project_starting_cost"}
      Starting Cost:
  %dd
    = form.text_field :starting_cost, :size => '30', :maxlength => '100'
  %dt
    %label{:for => "project_use_fixed_daily_rate"}
      Use Fixed Rate:
  %dd
    = form.check_box(:use_fixed_daily_rate)
  %dt
    %label{:for => "project_fixed_daily_rate"}
      Fixed Rate:
  %dd
    = form.text_field :fixed_daily_rate, :size => '30', :maxlength => '100'
  %dt
    %label{:for => "project_fixed_pivotal_id"}
      Pivotal Id:
  %dd
    = form.text_field :pivotal_id, :size => '30', :maxlength => '100'
