= render :partial => 'billings/select_start_date'
%table
  %tr
    %th Category
    %th Hours
    %th Percent
    - ProjectCategory.reportable.each do |category|
      %tr
        %td= category.name
        %td= hours = (@billings.timesheets_for_category(category).sum &:hours)
        %td= number_to_percentage(hours / @billings.reportable_hours * 100.0,:precision => 2)

- start_date = @billings.start_date
- end_date = @billings.end_date
= pie_chart("Utilisation #{start_date.strftime('%d/%m/%y')} to #{end_date.strftime('%d/%m/%y')}", 'pie_data', start_date, end_date)