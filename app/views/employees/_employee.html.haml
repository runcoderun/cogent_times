%tr
  %td= employee.id
  %td= employee.surname
  %td= employee.first_name
  %td= link_to "Edit", employee_url(employee.id), :class => "Edit"
  %td= link_to "Delete", employee_url(employee.id), :method => :delete, :confirm => "Are you sure you want to delete #{employee.surname}?", :class => "Delete"
